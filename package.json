{
  "name": "deepcode-charm",
  "version": "1.0.0a",
  "description": "Framework modular para bots do Discord usando charms como blocos de construção",
  "main": "src/index.js",
  "types": "src/types/index.ts",
  "type": "module",
  "files": [
    "src/**/*",
    "README.md",
    "LICENSE",
    "docs/SECURITY.md",
    "docs/USAGE.md",
    "!src/**/*.test.ts",
    "!src/**/*.test.js",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.js"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test tests/**/*.test.ts",
    "test:watch": "bun test --watch tests/**/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "bun run build && bun test",
    "postinstall": "echo 'DeepCode Charm Framework instalado! Consulte a documentação: https://github.com/deepcode-charm-remake/framework#readme'"
  },
  "keywords": [
    "discord",
    "bot",
    "framework",
    "modular",
    "charms",
    "typescript",
    "bun",
    "discord.js",
    "aoi.js",
    "alternative",
    "easy",
    "simple",
    "powerful",
    "secure"
  ],
  "author": {
    "name": "leref01",
    "url": "https://github.com/bryansmithsantos/deepcode-charm-remake"
  },
  "license": "MIT",
  "homepage": "https://github.com/deepcode-charm/framework#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bryansmithsantos/deepcode-charm-remake.git"
  },
  "bugs": {
    "url": "https://github.com/deepcode-charm-remake/framework/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/deepcode-charm-remake"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./src/types/index.ts"
    },
    "./types": {
      "import": "./src/types/index.js",
      "types": "./src/types/index.ts"
    }
  }
}
